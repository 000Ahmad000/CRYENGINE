def build(bld):
	
	bld.CryEngineModule(
		target		= 'CryAudioImplSDLMixer',
		vs_filter	= 'CryEngine/Audio/Implementations',
		file_list   = 'cryaudioimpl.waf_files',
		pch			= 'stdafx.cpp',
		use_module = ['sdl_mixer_static',
			'timidity',
			'native_midi',
			'flac_static',
			'libmikmod_static',
			'libvorbis_static',
			'libvorbisfile'
		],
		linux_use_module = [ 'libmodplug_static' ],
		android_use_module = [ 'libmodplug_static' ],

		module_extensions = ['sdl2'],
		includes = ['../../Common'],
	)
